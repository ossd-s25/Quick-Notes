{
  "manifest_version": 2,
  "name": "Sidebar Notes",
  "version": "1.0",
  "default_locale": "en-US",
  "description": "A Firefox extension to take notes in a sidebar and save them locally.",
  "permissions": ["storage", "downloads"],  
  "sidebar_action": {
    "default_title": "Notes",
    "default_panel": "sidebar/sidebar.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-96-notes.png"
  }
}